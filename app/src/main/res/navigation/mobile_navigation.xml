<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstone.nutrieasy.ui.main.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <action
        android:id="@+id/action_global_navigation_home"
        app:destination="@id/navigation_home"
        app:enterAnim="@animator/nav_default_enter_anim"
        app:popExitAnim="@animator/nav_default_exit_anim" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.capstone.nutrieasy.ui.main.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.capstone.nutrieasy.ui.main.scan.ScanFragment"
        android:label="fragment_scan"
        tools:layout="@layout/fragment_scan" />
    <action
        android:id="@+id/action_global_scanFragment"
        app:destination="@id/scanFragment"
        app:enterAnim="@animator/nav_default_enter_anim"
        app:popExitAnim="@animator/nav_default_exit_anim" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment"
        app:enterAnim="@animator/nav_default_enter_anim"
        app:popExitAnim="@animator/nav_default_exit_anim" />
</navigation>